<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">6100</defaultcontrol>
    <animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
    <animation effect="fade" end="0" start="100" time="300">WindowClose</animation>
    <onunload>ClearProperty(OSDExpandInfo,Home)</onunload>
    <onunload>ClearProperty(OSDArtistDetails,Home)</onunload>
    <controls>

        <control type="group" id="6002">

            <visible allowhiddenfocus="true">String.IsEmpty(Window(Home).Property(OSDExpandInfo))</visible>
            <animation effect="fade" start="0" end="100" time="300" delay="200">Visible</animation>
            <animation effect="fade" end="0" start="100" time="150">Hidden</animation>

            <!-- Left Side Buttons -->
            <control type="grouplist" id="6000">
                <centerbottom>70</centerbottom>
                <height>120</height>
                <left>view_pad</left>
                <right>view_pad</right>
                <orientation>horizontal</orientation>
                <itemgap>30</itemgap>
                <onleft>6800</onleft>
                <onright>6500</onright>
                <onup>8200</onup>
                <ondown condition="!Window.IsVisible(script-cu-lrclyrics-main.xml)">SetFocus(9801,0,absolute)</ondown>
                <include content="OSD_Button">
                    <param name="autoclose">true</param>
                    <param name="visible">true</param>
                    <param name="icon">$VAR[Image_OSD_PlayPause]</param>
                    <param name="id">6100</param>
                    <param name="groupid">6199</param>
                    <onclick>PlayerControl(Play)</onclick>
                    <onfocus>ClearProperty(OSDArtistDetails,Home)</onfocus>
                    <onfocus condition="String.IsEmpty(Window(Home).Property(ResetScroll))">SetProperty(ResetScroll," ",home)</onfocus>
                    <onfocus condition="!String.IsEmpty(Window(Home).Property(ResetScroll))">ClearProperty(ResetScroll,home)</onfocus>
                </include>
                <include content="OSD_Button">
                    <param name="autoclose">true</param>
                    <param name="visible">true</param>
                    <param name="icon">osd/next.png</param>
                    <param name="id">6200</param>
                    <param name="groupid">6299</param>
                    <param name="flipx">true</param>
                    <onclick>PlayerControl(Previous)</onclick>
                    <onfocus>ClearProperty(OSDArtistDetails,Home)</onfocus>
                    <onfocus condition="String.IsEmpty(Window(Home).Property(ResetScroll))">SetProperty(ResetScroll," ",home)</onfocus>
                    <onfocus condition="!String.IsEmpty(Window(Home).Property(ResetScroll))">ClearProperty(ResetScroll,home)</onfocus>
                </include>
                <include content="OSD_Button">
                    <param name="autoclose">true</param>
                    <param name="visible">true</param>
                    <param name="icon">osd/next.png</param>
                    <param name="id">6300</param>
                    <param name="groupid">6399</param>
                    <param name="flipx">false</param>
                    <onclick>PlayerControl(Next)</onclick>
                    <onfocus>ClearProperty(OSDArtistDetails,Home)</onfocus>
                    <onfocus condition="String.IsEmpty(Window(Home).Property(ResetScroll))">SetProperty(ResetScroll," ",home)</onfocus>
                    <onfocus condition="!String.IsEmpty(Window(Home).Property(ResetScroll))">ClearProperty(ResetScroll,home)</onfocus>
                </include>
                <include content="OSD_Button">
                    <param name="autoclose">true</param>
                    <param name="visible">true</param>
                    <param name="icon">osd/stop.png</param>
                    <param name="id">6400</param>
                    <param name="groupid">6499</param>
                    <param name="flipx">false</param>
                    <onclick>PlayerControl(Stop)</onclick>
                    <onfocus>ClearProperty(OSDArtistDetails,Home)</onfocus>
                    <onfocus condition="String.IsEmpty(Window(Home).Property(ResetScroll))">SetProperty(ResetScroll," ",home)</onfocus>
                    <onfocus condition="!String.IsEmpty(Window(Home).Property(ResetScroll))">ClearProperty(ResetScroll,home)</onfocus>
                </include>
            </control>

            <!-- Right Side Buttons -->
            <control type="grouplist" id="6001">
                <centerbottom>70</centerbottom>
                <height>120</height>
                <left>view_pad</left>
                <right>view_pad</right>
                <orientation>horizontal</orientation>
                <itemgap>30</itemgap>
                <align>right</align>
                <onleft>6400</onleft>
                <onright>6100</onright>
                <onup>SetFocus(9803)</onup>
                <ondown condition="!Window.IsVisible(script-cu-lrclyrics-main.xml)">SetFocus(9801,0,absolute)</ondown>
                <include content="OSD_Button">
                    <param name="autoclose">true</param>
                    <param name="visible">true</param>
                    <param name="icon">osd/lyrics.png</param>
                    <param name="id">6500</param>
                    <param name="groupid">6599</param>
                    <onclick>Close</onclick>
                    <onclick>runscript(script.cu.lrclyrics)</onclick>
                    <onfocus>SetProperty(OSDArtistDetails,1,Home)</onfocus>
                </include>
                <include content="OSD_Button">
                    <param name="autoclose">true</param>
                    <param name="visible">true</param>
                    <param name="icon">$VAR[Image_OSD_Repeat]</param>
                    <param name="id">6600</param>
                    <param name="groupid">6699</param>
                    <onclick>PlayerControl(Repeat)</onclick>
                    <onfocus>SetProperty(OSDArtistDetails,1,Home)</onfocus>
                </include>
                <include content="OSD_Button">
                    <param name="autoclose">true</param>
                    <param name="visible">true</param>
                    <param name="icon">$VAR[Image_OSD_Shuffle]</param>
                    <param name="id">6700</param>
                    <param name="groupid">6799</param>
                    <onclick>PlayerControl(Random)</onclick>
                    <onfocus>SetProperty(OSDArtistDetails,1,Home)</onfocus>
                </include>
                <include content="OSD_Button">
                    <param name="autoclose">true</param>
                    <param name="visible">true</param>
                    <param name="icon">osd/settings.png</param>
                    <param name="id">6800</param>
                    <param name="groupid">6899</param>
                    <onclick>ActivateWindow(1119)</onclick>
                    <onfocus>SetProperty(OSDArtistDetails,1,Home)</onfocus>
                </include>

            </control>

            <control type="group">
                <visible>!String.IsEmpty(Window(Home).Property(OSDArtistDetails))</visible>
                <visible>!Window.IsVisible(script-cu-lrclyrics-main.xml)</visible>
                <animation type="Visible" reversible="false">
                    <effect type="fade" start="0" end="100" time="600" delay="200" />
                </animation>
                <left>620</left>
                <height>580</height>
                <top>view_top</top>
                <right>view_pad</right>
                <control type="textbox">
                    <font>font_midi_plot</font>
                    <textcolor>panel_fg_70</textcolor>
                    <label>$INFO[MusicPlayer.Property(Album_Description),,[CR]]$INFO[MusicPlayer.Property(Artist_Description)]$INFO[Window(Home).Property(ResetScroll)]</label>
                    <autoscroll delay="6000" time="3000" repeat="10000">!String.IsEmpty(Window(Home).Property(OSDArtistDetails)) + !Control.HasFocus(9803)</autoscroll>
                    <pagecontrol>9803</pagecontrol>
                    <bottom>-20</bottom>
                </control>

                <include content="View_Furniture_Scrollbar_V">
                    <param name="id">9803</param>
                    <param name="onleft">SetFocus(6001)</param>
                    <param name="onright">SetFocus(6001)</param>
                    <param name="ondown">SetFocus(6001)</param>
                    <param name="onup">-</param>
                    <param name="onback">SetFocus(6001)</param>
                    <left>-80</left>
                    <bottom>0</bottom>
                </include>
            </control>
        </control>



        <include content="OSD_CastInfo_HintText">
            <param name="label">$LOCALIZE[31346]</param>
            <visible>![Control.HasFocus(9801) | Control.HasFocus(9802)]</visible>
            <visible>!Window.IsVisible(script-cu-lrclyrics-main.xml)</visible>
            <include>Animation_FadeOut</include>
            <include>Animation_FadeIn_Delay</include>
        </include>


        <control type="group">
            <visible>Control.HasFocus(9801) | Control.HasFocus(9802)</visible>
            <visible>!Window.IsVisible(script-cu-lrclyrics-main.xml)</visible>
            <include>Animation_FadeIn_Delay</include>
            <include>Animation_FadeOut</include>
            <left>view_pad</left>
            <height>480</height>
            <bottom>view_pad</bottom>
            <include content="List_PlayList">
                <param name="id">9801</param>
                <param name="controltype">fixedlist</param>
                <param name="orientation">vertical</param>
                <param name="offset_y">40</param>
                <param name="detailed">true</param>
                <content>
                    <item>
                        <label>$LOCALIZE[559]</label>
                        <icon>osd/musicplaylist.png</icon>
                        <property name="sublabel">$LOCALIZE[31244]</property>
                        <property name="folderpath">playlistmusic://</property>
                        <property name="detailed">True</property>
                    </item>
                </content>
                <content>musicdb://albums/?xsp={"rules":{"and":[{"field":"artist","operator":"is","value":["$INFO[MusicPlayer.Artist]"]}]},"type":"albums"}</content>
                <!-- <content>
                    <item>
                        <label>$INFO[MusicPlayer.Genre]</label>
                        <icon>resource://resource.images.musicgenreicons.text/$INFO[MusicPlayer.Genre].jpg</icon>
                        <property name="sublabel">$LOCALIZE[515]</property>
                        <property name="folderpath">musicdb://songs/?xsp={"rules":{"and":[{"field":"genre","operator":"is","value":[$ESCINFO[MusicPlayer.Genre]]}]}, "order":{"direction":"descending","ignorefolders":0,"method":"random"}, "type":"songs"}</property>
                        <visible>!String.IsEmpty(MusicPlayer.Genre)</visible>
                    </item>
                </content> -->
                <onclick condition="String.IsEmpty(Window(Home).Property(OSDRelaunchFullscreen))">SetProperty(OSDRelaunchFullscreen,1,Home)</onclick>
                <onclick condition="String.IsEmpty(Container(9801).ListItem.Property(folderpath))">PlayMedia($INFO[Container(9801).ListItem.FolderPath],isdir,playoffset=$INFO[Window(Home).Property(OSDRelaunchFullscreen)])</onclick>
                <onclick condition="!String.IsEmpty(Container(9801).ListItem.Property(folderpath))">PlayMedia($ESCINFO[Container(9801).ListItem.Property(folderpath)],isdir,playoffset=$INFO[Window(Home).Property(OSDRelaunchFullscreen)])</onclick>
                <onback>SetFocus(6002)</onback>
                <onup>SetFocus(6002)</onup>
                <onleft>SetFocus(6002)</onleft>
                <ondown>-</ondown>
                <onright>9802</onright>
                <left>-60</left>
                <bottom>-20</bottom>
                <width>1000</width>
                <preloaditems>0</preloaditems>
                <focusposition>1</focusposition>
                <movement>2</movement>
                <onfocus>ClearProperty(OSDArtistDetails,Home)</onfocus>
                <onfocus>SetProperty(OSDExpandInfo,1,Home)</onfocus>
                <onunfocus>ClearProperty(OSDExpandInfo,Home)</onunfocus>
            </include>
            <control type="group">
                <left>880</left>
                <width>920</width>
                <include content="List_PlayList">
                    <param name="id" value="9802" />
                    <param name="controltype">fixedlist</param>
                    <param name="orientation">vertical</param>
                    <param name="offset_y">40</param>
                    <param name="detailed">true</param>
                    <content>$VAR[Path_MusicOSD_TrackList]</content>
                    <onclick>SetProperty(OSDRelaunchFullscreen,$INFO[Container(9802).CurrentItem],Home)</onclick>
                    <onclick>SetFocus(9801)</onclick>
                    <onclick>Action(Select)</onclick>
                    <onback>SetFocus(6002)</onback>
                    <onup>SetFocus(6002)</onup>
                    <onright>SetFocus(6002)</onright>
                    <ondown>-</ondown>
                    <onleft>9801</onleft>
                    <left>-40</left>
                    <right>-40</right>
                    <focusposition>1</focusposition>
                    <movement>2</movement>
                    <bottom>-20</bottom>
                    <onfocus>ClearProperty(OSDArtistDetails,Home)</onfocus>
                    <onfocus>SetProperty(OSDExpandInfo,1,Home)</onfocus>
                    <onunfocus>ClearProperty(OSDExpandInfo,Home)</onunfocus>
                </include>
            </control>
        </control>

        <control type="slider">
            <left>view_pad</left>
            <centerbottom>166</centerbottom>
            <height>60</height>
            <width>1760</width>
            <texturesliderbar/>
            <textureslidernib/>
            <textureslidernibfocus/>
            <info>Player.Progress</info>
            <action>seek</action>
        </control>
        <control type="slider" id="8200">
            <centerleft>50%</centerleft>
            <width>1760</width>
            <height>112</height>
            <centerbottom>166</centerbottom>
            <info>Player.Progress</info>
            <action>seek</action>
            <texturesliderbar colordiffuse="00ffffff">progress/slider_bg.png</texturesliderbar>
            <textureslidernib />
            <textureslidernibfocus colordiffuse="main_fg_100">progress/slider_nib.png</textureslidernibfocus>
            <onup>6002</onup>
            <ondown>6002</ondown>
        </control>
    </controls>
</window>